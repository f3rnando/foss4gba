<div class="container">
  <div class="content">
    <div class="row">
      <div class="span9">
        <div class="hero-unit banner" style="text-align: right;">
          <h1><%= t(:conference_name) %></h1>
          <h3><%= t(:conference_slogan) %></h3>
          <h2><%= t(:conference_date) %></h2>
          <h3><%= t(:conference_venue) %></h3>
          <h4><%= t(:conference_location) %></h4>
        </div>
      </div>
    </div>
    <div class="row" id="about">
      <div class="span9">
        <div class="well">
          <%= t('conference_about.html') %>
        </div>
      </div>
    </div>
    <% if Sponsor.count > 0 %>
      <div class="row" id="sponsors">
        <div class="span9">
          <div id="sponsors" class="well">
            <h2>Auspiciantes</h2>
            <ul class="thumbnails">
              <% Sponsor.all.each do |sponsor| %>
                <li>
                  <%= link_to image_tag(sponsor.logo_url), sponsor.website, :class => "thumbnail" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
    <div class="row" id="venue">
      <div class="span9">
        <div class="well">
          <%= t('venue_about.html') %>
          <div id="map"></div>
        </div>
      </div>
    </div>
  </div>
</div>